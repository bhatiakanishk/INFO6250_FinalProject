    <bean id="adminDao" class="com.mycompany.dao.AdminDao" scope="request" />
    <bean id="admin" class="com.mycompany.pojo.Admin" scope="request"/>
    <bean id="flightDao" class="com.mycompany.dao.FlightDao" scope="request"/>
    <bean id="flight" class="com.mycompany.pojo.Flight" scope="request"/>

