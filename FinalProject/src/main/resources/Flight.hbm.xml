<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-mapping>
    <class name="com.mycompany.pojo.Flight" table="flight">
        <id name="id" column="id" type="integer">
            <generator class="native"/>
        </id>
        <property name="flightNo" column="flightNo" type="integer"/>
        <property name="source" column="source" type="string" />
        <property name="dest" column="dest" type="string" />
        <property name="totalSeats" column="totalSeats" type="integer"/>
                    
    </class>
</hibernate-mapping>
